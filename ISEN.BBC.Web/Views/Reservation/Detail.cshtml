@model Reservation

@{
    ViewData["Title"] = "Details";
}

<div class="row">
    <div class="col-md-12">
        <h1>
            Reservation du trajet 
            
            <small>de @Html.Label(ViewBag.CurrentDepart as string) vers @Html.Label(ViewBag.CurrentDestination as string)</small>
            <br/>
            <small>le @Html.Label(ViewBag.CurrentDate as String)</small>
        </h1>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <form class="form-horizontal" asp-action="Detail">
            @if (Model == null)
            {
                <input type="hidden" asp-for="VoyageId" value="@ViewData["VoyageId"]"/>
            }
            else
            {
                <input type="hidden" asp-for="VoyageId" value="Model?.VoyageId" />
            }
            <div>
                <label asp-for="Name" class="control-label">Nom</label>
                <input type="text" class="form-control" id="Name" placeholder="Nom" asp-for="Name" value="@Model?.Name"/>
            </div>
            <div>
                <label asp-for="Comment" class="control-label">Commentaire</label>
                <input type="text" class="form-control" id="Comment" placeholder="Commentaire" asp-for="Comment" value="@Model?.Comment"/>
            </div>
            <hr/>
            <input type="submit" class="btn btn-primary" value="Sauvegarder"/>
            <a asp-controller="Voyage" asp-action="IndexVoyageur" asp-route-id="1" class="btn btn-default">Annuler</a>

        </form>
    </div>
</div>